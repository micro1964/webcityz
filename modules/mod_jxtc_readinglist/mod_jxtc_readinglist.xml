<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" method="upgrade">
	<name>Reading List</name>
	<author>JoomlaXTC</author>
	<creationDate>2017-09-12</creationDate>
	<copyright>Copyright (C) 2012-2017 Monev Software LLC. All rights reserved.</copyright>
	<license>Dual GNU/GPL v2.0 and http://www.joomlaxtc.com/license JoomlaXTC Proprietary Use License</license>
	<authorUrl>http://www.joomlaxtc.com</authorUrl>
	<version>1.3.5</version>
	<description>JoomlaXTC Reading List module</description>
	<files>
		<filename module="mod_jxtc_readinglist">mod_jxtc_readinglist.php</filename>
    <filename>index.html</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language/">
		<language tag="en-GB">en-GB.mod_jxtc_readinglist.ini</language>
	</languages>
	<config>
		<fields name="params">	
			<fieldset name="basic">
				<field name="showall" type="radio" class="btn-group" default="1" label="Show &quot;All&quot; option" description="Enable or disable the &quot;All&quot; option." >
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="showcopy" type="radio" class="btn-group" default="1" label="Show &quot;Copy&quot; option" description="Enable or disable the &quot;Copy&quot; option." >
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="showemail" type="radio" class="btn-group" default="1" label="Show &quot;Email&quot; option" description="Enable or disable the &quot;Email&quot; option." >
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>JXTCREADINGLIST</name>
	<author>JoomlaXTC</author>
	<creationDate>2017-09-12</creationDate>
	<copyright>Copyright (C) 2012-2017 Monev Software LLC. All rights reserved.</copyright>
	<license>Dual GNU/GPL v2.0 and http://www.joomlaxtc.com/license JoomlaXTC Proprietary Use License</license>
	<authorUrl>http://www.joomlaxtc.com</authorUrl>
	<version>1.3.5</version>
	<description>JoomlaXTC Reading List component</description>
	<install>
		<sql>
	    <file charset="utf8" driver="mysql">install.sql</file>
	  </sql>
	</install>
	<uninstall>
		<sql>
	    <file charset="utf8" driver="mysql">uninstall.sql</file>
	  </sql>
	</uninstall>
	<files folder="site">
		<folder>font</folder>
		<folder>language</folder>
		<folder>views</folder>
		<filename>controller.php</filename> 
		<filename>index.html</filename>
		<filename>jxtcreadinglist.js</filename> 
		<filename>jxtcreadinglist.php</filename> 
		<filename>readinglist.css</filename> 
	</files>
	<languages folder="site/language/">
		<language tag="en-GB">en-GB.com_jxtcreadinglist.ini</language>
	</languages>
	<administration>
		<menu link="option=com_jxtcreadinglist" img="components/com_jxtcreadinglist/images/jxtc_icon.png">RL_MENU</menu>
    <submenu>
        <menu link="option=com_jxtcreadinglist&amp;view=entries">RL_MENU_ENTRIES</menu>
        <menu link="option=com_jxtcreadinglist&amp;view=about">RL_MENU_ABOUT</menu>
    </submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>images</folder>
			<folder>language</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>config.xml</filename>
			<filename>COPYRIGHT.txt</filename>
			<filename>helper.php</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>LICENSE.txt</filename>
			<filename>jxtcreadinglist.php</filename> 
			<filename>uninstall.sql</filename>
		</files>
		<languages folder="admin/language/">
			<language tag="en-GB">en-GB.com_jxtcreadinglist.ini</language>
      <language tag="en-GB">en-GB.com_jxtcreadinglist.sys.ini</language>
		</languages>
	</administration>
</extension>